<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/tv_transaction_date"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size_very_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="10dp"
        android:gravity="start"/>

    <TextView
        android:id="@+id/tv_transaction_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size_very_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_transaction_date"
        app:layout_constraintEnd_toStartOf="@+id/tv_transaction_money"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/tv_transaction_money"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size_very_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="10dp"
        android:gravity="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>